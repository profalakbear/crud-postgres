@model map360.Models.User

@{
    ViewBag.Title = "Home Page";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <title>Hello, world!</title>
</head>

<body>
    <div class="container mt-3 mb-3">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">E-mail</th>
                    <th scope="col">Role</th>
                    <th scope="col">NameSurname</th>
                    <th scope="col">CompanyName</th>
                    <th scope="col">CompanyAddress</th>
                    <th scope="col">TaxNo</th>
                    <th scope="col">Phone</th>
                    <th scope="col"></th>
                </tr>
            </thead>

            <tbody id="tableBody">

            </tbody>
        </table>

        <br />
        <br />

        <form id="newUser">
            <h2> Add new user</h2>
            <div class="form-row">

                <div class="form-group col-md-6">
                    <label for="inputEmail">Email</label>
                    <input type="email" class="form-control" id="inputEmail" placeholder="Email">
                </div>

                <div class="form-group col-md-4">
                    <label for="inputStateRole">Role</label>
                    <select id="inputStateRole" class="form-control">
                        <option value="0" selected>Choose Role</option>

                    </select>
                </div>

                <div class="form-group col-md-6">
                    <label for="inputName">Name and Surname</label>
                    <input type="text" class="form-control" id="inputName" placeholder="Name and Surname">
                </div>

                <div class="form-group col-md-4">
                    <label for="inputStateCompany">CompanyName</label>
                    <select id="inputStateCompany" class="form-control">
                        <option value="0" selected>Choose Company</option>

                    </select>
                </div>

            </div>
            <button type="submit" id="addNewUser" class="btn btn-success"><i class="fas fa-plus-circle"></i></button>
        </form>

        <!-- Update Modal -->
        <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="updateModalLabel">Update User</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-row">
                                <div id="updateId">

                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputEmailUpdate">Email</label>
                                    <input type="email" class="form-control" id="inputEmailUpdate" placeholder="Email">
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="inputStateRoleUpdate">Role</label>
                                    <select id="inputStateRoleUpdate" class="form-control">
                                        <option selected>Choose...</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="inputNameUpdate">Name And Surname</label>
                                    <input type="text" class="form-control" id="inputNameUpdate" placeholder="Name And Surname">
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="inputStateCompanyUpdate">CompanyName</label>
                                    <select id="inputStateCompanyUpdate" class="form-control">
                                        <option selected>Choose...</option>
                                    </select>
                                </div>

                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" id="UpdateUser" class="btn btn-warning">Save changes</button>
                    </div>
                </div>
            </div>
        </div>


        <!-- See Modal -->
        <div class="modal fade" id="seeModal" tabindex="-1" role="dialog" aria-labelledby="seeModal" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="updateModalLabel">User Details</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body" id="seeModalInner">

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    @Scripts.Render("~/Scripts/users.js")
</body>
</html>